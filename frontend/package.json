{
	"name": "frontend",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "npm run prepare-css && vite dev",
		"build": "npm run prepare-css && vite build",
		"preview": "npm run prepare-css && vite preview",
		"prepare-css": "npm run smui-theme-light && npm run smui-theme-dark && npm run site-light && npm run site-dark",
		"smui-theme-light": "mkdir -p static/css && smui-theme compile static/css/smui.css -i src/theme",
		"smui-theme-dark": "mkdir -p static/css && smui-theme compile static/css/smui-dark.css -i src/theme/dark",
		"site-light": "mkdir -p static/css && sass --no-source-map -I src/theme -I node_modules -I ../smui-theme/node_modules -I ../../node_modules src/site.scss static/css/site.css",
		"site-dark": "mkdir -p static/css && sass --no-source-map -I src/theme/dark -I node_modules -I ../smui-theme/node_modules -I ../../node_modules src/site.scss static/css/site-dark.css",
		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
        "sbom": "cyclonedx-npm  --output-file frontend-sbom.json --output-format json"
	},
	"devDependencies": {
		"@cyclonedx/cyclonedx-npm": "^4.1.2",
		"@fontsource-utils/scss": "^0.2.2",
		"@fontsource/material-icons": "^5.2.7",
		"@fontsource/material-symbols-outlined": "^5.2.34",
		"@fontsource/roboto": "^5.2.9",
		"@playwright/test": "^1.58.2",
		"@smui/button": "^8.0.3",
		"@smui/data-table": "^8.0.3",
		"@smui/fab": "^8.0.3",
		"@smui/icon-button": "^8.0.3",
		"@smui/paper": "^8.0.3",
		"@smui/snackbar": "^8.0.3",
		"@smui/top-app-bar": "^8.0.3",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/adapter-static": "^3.0.10",
		"@sveltejs/kit": "^2.50.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@typescript-eslint/eslint-plugin": "^8.55.0",
		"@typescript-eslint/parser": "^8.55.0",
		"eslint": "^10.0.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.15.0",
		"prettier": "^3.8.1",
		"prettier-plugin-svelte": "^3.4.1",
		"sass": "^1.97.3",
		"smui-theme": "^8.0.3",
		"svelte": "^5.50.1",
		"svelte-check": "^4.3.6",
		"svelte-preprocess": "^6.0.3",
		"tslib": "^2.8.1",
		"typescript": "^5.9.3",
		"vite": "^7.3.1",
		"vitest": "^4.0.18"
	},
	"type": "module"
}
