{
	"name": "frontend",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "npm run prepare-css && vite dev",
		"build": "npm run prepare-css && vite build",
		"preview": "npm run prepare-css && vite preview",
		"prepare-css": "npm run smui-theme-light && npm run smui-theme-dark && npm run site-light && npm run site-dark",
		"smui-theme-light": "mkdir -p static/css && smui-theme compile static/css/smui.css -i src/theme",
		"smui-theme-dark": "mkdir -p static/css && smui-theme compile static/css/smui-dark.css -i src/theme/dark",
		"site-light": "mkdir -p static/css && sass --no-source-map -I src/theme -I node_modules -I ../smui-theme/node_modules -I ../../node_modules src/site.scss static/css/site.css",
		"site-dark": "mkdir -p static/css && sass --no-source-map -I src/theme/dark -I node_modules -I ../smui-theme/node_modules -I ../../node_modules src/site.scss static/css/site-dark.css",
		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write ."
	},
	"devDependencies": {
		"@fontsource-utils/scss": "^0.2.1",
		"@fontsource/material-icons": "^5.2.5",
		"@fontsource/material-symbols-outlined": "^5.2.10",
		"@fontsource/roboto": "^5.2.5",
		"@playwright/test": "^1.52.0",
		"@smui/button": "^8.0.0-beta.3",
		"@smui/data-table": "^8.0.0-beta.3",
		"@smui/fab": "^8.0.0-beta.3",
		"@smui/icon-button": "^8.0.0-beta.3",
		"@smui/paper": "^8.0.0-beta.3",
		"@smui/snackbar": "^8.0.0-beta.3",
		"@smui/top-app-bar": "^8.0.0-beta.3",
		"@sveltejs/adapter-auto": "^6.0.1",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.21.1",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@typescript-eslint/eslint-plugin": "^8.33.0",
		"@typescript-eslint/parser": "^8.33.0",
		"eslint": "^9.28.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-svelte": "^3.9.0",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.4.0",
		"sass": "^1.89.1",
		"smui-theme": "^8.0.0-beta.0",
		"svelte": "^5.33.10",
		"svelte-check": "^4.2.1",
		"svelte-preprocess": "^6.0.3",
		"tslib": "^2.8.1",
		"typescript": "^5.8.3",
		"vite": "^6.3.5",
		"vitest": "^3.1.4"
	},
	"type": "module"
}
